<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
	<!--定义日志文件的存储地址 勿在 LogBack 的配置中使用相对路径 -->
	<property name="LOG_HOME" value="/log/consumer-test" />
	<appender name="flume" class="com.teambytes.logback.flume.FlumeLogstashV1Appender">
         <flumeAgents>
             150.0.2.129:9999,
             150.0.2.165:9999,
             150.0.2.167:9999
         </flumeAgents>
         <flumeProperties>
             connect-timeout=40000;
             request-timeout=80000
         </flumeProperties>
         <batchSize>1000</batchSize>
         <reportingWindow>1000</reportingWindow>
         <additionalAvroHeaders>
             myHeader=myValue
         </additionalAvroHeaders>
         <application>service</application>
         <layout class="data.exchange.center.logback.SgyLoggerPatternLayout">
             <pattern>%sgyLoggerPatternLayout{service-test} %n</pattern>
         </layout>
     </appender>
	<!-- 控制台输出 -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
			<layout class="data.exchange.center.logback.SgyLoggerPatternLayout">
				<pattern>%sgyLoggerPatternLayout{service-test} %n</pattern>
			</layout>
		</encoder>
	</appender>
	<!-- 按照每天生成日志文件 -->
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!--日志文件输出的文件名 -->
			<FileNamePattern>
				${LOG_HOME}/service.log.%d{yyyy-MM-dd}.log
			</FileNamePattern>
			<!--日志文件保留天数 -->
			<MaxHistory>30</MaxHistory>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
		<!-- <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder"> -->
			<!-- <layout class="com.service.test.NetbarLoggerPatternLayout"> -->
				<!-- <pattern>%netbarLoggerPattern{XXX系统} %n</pattern> -->
			<!-- </layout> -->
			<!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符 -->
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
		</encoder>
		<!--日志文件最大的大小 -->
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>10MB</MaxFileSize>
		</triggeringPolicy>
	</appender>

	<!-- 日志输出级别 -->
	<root level="DEBUG">
		<appender-ref ref="flume" />
		<appender-ref ref="STDOUT" />
	</root>
</configuration>